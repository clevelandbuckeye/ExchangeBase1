@model IEnumerable<Basketball7.Models.Season>

@{
    ViewData["Title"] = "Index";
}

<h2 style="margin-top:75px;">All Seasons</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SEASON)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TEAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.REB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AST)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BLK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.STL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PTS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string style = item.SEASON == "Career" ? "font-weight:Bold;" : null;
            if(item.SEASON == "Career")
            {
                continue;
            }
            <tr style="@style">
            
                <td>
                    @Html.DisplayFor(modelItem => item.Player.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEASON)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEAM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.REB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AST)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BLK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.STL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PTS)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
